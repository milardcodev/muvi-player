<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_player_control_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    tools:context=".PlayerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_header_container"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backBtnPA"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_back"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now Playing"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backBtnPA"
            app:layout_constraintEnd_toStartOf="@+id/shareBtnPA"/>

        <ImageView
            android:id="@+id/shareBtnPA"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_share"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/songImgPA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/music_cover"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginVertical="20dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toBottomOf="@id/layout_header_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_desc_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songImgPA">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/favouriteBtnPA">

            <TextView
                android:id="@+id/songNamePA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="start"
                android:ellipsize="marquee"
                android:maxLines="1"
                app:layout_constraintWidth_max="200dp"/>

            <TextView
                android:id="@+id/songAlbumPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:singleLine="true"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="start"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintWidth_max="200dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/favouriteBtnPA"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/ic_favourite"
            android:scaleX="1.26"
            android:scaleY="1.26"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout_controls_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layout_desc_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBarPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="25"
                android:progressTint="@color/white"
                android:thumbTint="@color/white"
                android:max="100"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSeekBarStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:14"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvSeekBarEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3:14"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_gravity="end"/>
            </FrameLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/repeatBtnPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:elevation="0dp"
                android:shadowColor="@color/black"
                android:backgroundTint="@color/white"
                app:elevation="0dp"
                app:collapsedSize="40dp"
                app:icon="@drawable/ic_repeat_off"
                app:iconTint="@color/black"
                app:iconSize="28dp"
                app:shapeAppearanceOverlay="@style/ExtendedRoundShape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginLeft="0dp"
                app:layout_goneMarginBaseline="0dp"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/previousBtnPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:shadowColor="@color/black"
                android:backgroundTint="@color/white"
                app:elevation="0dp"
                app:collapsedSize="40dp"
                app:icon="@drawable/ic_skip_previous"
                app:iconTint="@color/black"
                app:iconSize="28dp"
                app:shapeAppearanceOverlay="@style/ExtendedRoundShape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/playPauseBtnPA"
                app:layout_constraintStart_toEndOf="@id/repeatBtnPA"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/playPauseBtnPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:shadowColor="@color/black"
                android:backgroundTint="@color/white"
                app:elevation="0dp"
                app:collapsedSize="75dp"
                app:icon="@drawable/ic_play"
                app:iconTint="@color/black"
                app:iconSize="60dp"
                app:shapeAppearanceOverlay="@style/ExtendedRoundShape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/nextBtnPA"
                app:layout_constraintStart_toEndOf="@id/previousBtnPA"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/nextBtnPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:shadowColor="@color/black"
                android:backgroundTint="@color/white"
                app:elevation="0dp"
                app:collapsedSize="40dp"
                app:icon="@drawable/ic_skip_next"
                app:iconTint="@color/black"
                app:iconSize="28dp"
                app:shapeAppearanceOverlay="@style/ExtendedRoundShape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/playPauseBtnPA"
                app:layout_constraintEnd_toStartOf="@id/shuffleBtnPA"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/shuffleBtnPA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:elevation="0dp"
                android:shadowColor="@color/white"
                android:backgroundTint="@color/white"
                app:elevation="0dp"
                app:collapsedSize="40dp"
                app:icon="@drawable/ic_shuffle_off"
                app:iconTint="@color/black"
                app:iconSize="28dp"
                app:shapeAppearanceOverlay="@style/ExtendedRoundShape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginLeft="0dp"
                app:layout_goneMarginBaseline="0dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>